{
    "compilerOptions": {
        "target": "es5",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@components": ["src/components"],
            "@api/*": ["src/api/*"],
            "@utils": ["src/utils"],
            "@hooks": ["src/hooks"],
            "@styles/*": ["src/styles"],
            "@assets/*": ["public/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", "env.d.ts"],
    "exclude": ["node_modules"]
}
